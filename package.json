{
  "name": "hue-and-cry-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "lint": "eslint './src/**/*.{ts,tsx}' && echo 'lint success'",
    "lint:fix": "eslint --fix './src/**/*.{ts,tsx}' && echo 'lint success'",
    "pre-commit-types": "tsc -p tsconfig.json",
    "pre-commit-lint": "eslint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit-types && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "npm run pre-commit-lint --",
      "git add"
    ],
    "src/**/*.{json}": [
      "prettier --write",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      "next/babel"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.2",
    "@material-ui/icons": "^4.11.2",
    "classnames": "^2.2.6",
    "next": "10.0.5",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.21",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1"
  }
}
